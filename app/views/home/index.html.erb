<div class="bg-[#D4D4D4] flex-grow">
  <div class="flex flex-col items-center justify-center">
    <p class="text-xl">Destaques</p>

    <div class="grid grid-cols-4 gap-4 mt-4">
      <% @products.each do |product| %>
        <div class="card bg-white shadow rounded-md overflow-hidden">
          <img src="<%= product.image_url %>" alt="<%= product.name %>" class="w-32 h-32 object-contain">
          <div class="p-4">
            <h3 class="text-lg font-semibold"><%= product.name %></h3>
            <p class="text-gray-600 mt-2">R$: <%= product.price %></p>
          </div>
        </div>
      <% end %>
    </div>

  </div>
</div>
