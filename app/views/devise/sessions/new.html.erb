<div class="flex flex-col items-center justify-center bg-[#E1E1E1] flex-grow">

  <h2 class="mb-6 text-2xl text-center">Realizar Login</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="mb-4">
      <%= f.label :email, class: "block text-sm font-bold mb-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "shadow appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="mb-6">
      <%= f.label :password, class: "block text-sm font-bold mb-2" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "shadow appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="mb-6 flex flex-row">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class: "ml-2 block text-sm" %>
    </div>

    <div>
      <%= f.submit "Entrar", class: "w-full bg-blue-500 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
    </div>
  <% end %>

  <div class="mt-4 text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>
