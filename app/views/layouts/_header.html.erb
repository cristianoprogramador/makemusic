<header class="bg-[#717172] text-white pt-6">
  <div class="container mx-auto flex flex-col justify-center">
    <div class="flex flex-row items-center justify-between pb-3">
      <!-- Logo -->
      <%= link_to root_path, class: "cursor-pointer hidden md:flex" do %>
        <img src="/icons/logoHeader.svg" alt="Logo" class="h-12">
      <% end %>

      <!-- Search Bar -->
      <div>
        <input type="text" placeholder="Pesquisar..." class="w-full md:w-96 p-2 rounded-md placeholder:text-black">
      </div>

      <!-- User Info and Cart -->
      <div class="flex items-center">
        <!-- Bem Vindo, Cristiano -->
        <div class="text-white text-sm mr-4 flex flex-col items-center">
          <p>
            Bem Vindo,
          </p>
          <p>
            Cristiano
          </p>
        </div>

        <!-- Avatar -->
        <div class="mr-4 cursor-pointer">
          <img src="https://github.com/cristianoprogramador.png" alt="Avatar" class="w-14 h-14 rounded-full">
        </div>

        <!-- Shopping Cart SVG -->
        <% if current_user %>
          <%= link_to cart_path(current_user.cart) do %>
            <div class="cursor-pointer">
              <img src="/icons/cart.svg" alt="Logo" class="h-8">
            </div>
          <% end %>
        <% end %>

      </div>
    </div>
    <div class="flex flex-row justify-center items-center gap-12 pb-3 hidden md:flex">
      <div class="flex flex-row justify-center items-center gap-12 pb-1 hidden md:flex">
        <%= link_to root_path(category: 'Kits') do %>
          <div class="cursor-pointer flex flex-row gap-2 items-center justify-center">
            <img src="/icons/kits.svg" alt="Logo" class="h-8">
            <p>Kits</p>
          </div>
        <% end %>

        <%= link_to root_path(category: 'Cordas') do %>
          <div class="cursor-pointer flex flex-row gap-2 items-center justify-center">
            <img src="/icons/strings.svg" alt="Logo" class="h-8">
            <p>Cordas</p>
          </div>
        <% end %>

        <%= link_to root_path(category: 'Teclas') do %>
          <div class="cursor-pointer flex flex-row gap-2 items-center justify-center">
            <img src="/icons/keys.svg" alt="Logo" class="h-8">
            <p>Teclas</p>
          </div>
        <% end %>

        <%= link_to root_path(category: 'Áudio') do %>
          <div class="cursor-pointer flex flex-row gap-2 items-center justify-center">
            <img src="/icons/audio.svg" alt="Logo" class="h-8">
            <p>Áudio</p>
          </div>
        <% end %>

        <%= link_to root_path(category: 'Bateria') do %>
          <div class="cursor-pointer flex flex-row gap-2 items-center justify-center">
            <img src="/icons/drums.svg" alt="Logo" class="h-8">
            <p>Bateria</p>
          </div>
        <% end %>

        <%= link_to root_path(category: 'Sopro') do %>
          <div class="cursor-pointer flex flex-row gap-2 items-center justify-center">
            <img src="/icons/sopro.svg" alt="Logo" class="h-8">
            <p>Sopro</p>
          </div>
        <% end %>
      </div>

    </div>
  </div>
</header>
