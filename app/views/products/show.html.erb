<div class="flex flex-col items-center justify-center bg-[#E1E1E1] flex-grow">
  <div class="card bg-[#D4D4D4] shadow-lg w-full max-w-5xl flex">
    <!-- Imagem à esquerda -->
    <div class="w-1/2">
      <%= image_tag @product.image_url, alt: @product.name, class: "w-full h-[600px] object-contain p-2" %>
    </div>

    <!-- Detalhes à direita -->
    <div class="w-1/2 p-8 gap-4 flex flex-col justify-center items-center">
      <h1 class="text-3xl mb-4"><%= @product.name %></h1>
      <p class="mb-4"><%= @product.description %></p>
      <p class="text-xl text-gray-600">R$: <%= number_to_currency(@product.price, unit: "", separator: ",", delimiter: ".")  %></p>
      <%= form_for CartItem.new, url: cart_items_path do |f| %>
        <div>
          <%= f.label :quantity, "Quantidade:" %>
          <%= f.number_field :quantity, min: 1, value: 1, class: "p-1 rounded border w-12 bg-gray-300 text-center items-center" %>
        </div>
        <div class="flex justify-center items-center">
          <%= f.hidden_field :product_id, value: @product.id %>
          <%= f.submit "Adicionar ao Carrinho", class: "mt-4 bg-blue-500 hover:bg-blue-700 text-white p-2 rounded text-center" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
